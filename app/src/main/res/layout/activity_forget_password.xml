<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image"
    tools:context=".forget_password">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/forgot_login_image"
            android:layout_width="550dp"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/app_logo"
            tools:ignore="ContentDescription,MissingConstraints,ImageContrastCheck" />

        <TextView
            android:id="@+id/forgot_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/forgot_login_image"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/oswald_bold"
            android:text="Forgot Password Dashboard"
            android:textColor="@color/appcolor"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

        <EditText
            android:id="@+id/forgotemail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/forgot_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/sign_upedit"
            android:drawableLeft="@drawable/signup_email"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textColor="@color/appcolor"
            android:textColorHint="@color/appcolor"
            android:textSize="16dp"
            tools:ignore="Autofill,HardcodedText,MissingConstraints,RtlHardcoded,RtlSymmetry,SpUsage,TextFields,TextSizeCheck,TextContrastCheck,VisualLintTextFieldSize" />

        <TextView
            android:id="@+id/forgot_txt1"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_below="@+id/forgotemail"
            android:layout_marginStart="45dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="58dp"
            android:fontFamily="@font/oswald_bold"
            android:text="Don't have an account?"
            android:textColor="@color/appcolor"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText,TextSizeCheck" />

        <TextView
            android:id="@+id/forgot_signup_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgotemail"
            android:layout_marginLeft="218dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/oswald_bold"
            android:text="Sign up"
            android:textColor="#FF0000"
            android:textSize="18sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/getpassword"
            android:layout_width="336dp"
            android:layout_height="48dp"
            android:layout_below="@+id/forgot_signup_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/btnshape"
            android:backgroundTint="#509fd7"
            android:fontFamily="@font/oswald_bold"
            android:text="Get Password"
            android:textColor="@color/white"
            android:textFontWeight="800"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText,UnusedAttribute,TextSizeCheck,TextContrastCheck,VisualLintButtonSize"
            tools:visibility="visible" />


    </RelativeLayout>

</ScrollView>